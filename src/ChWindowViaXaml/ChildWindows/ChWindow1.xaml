<simpleChildWindow:ChildWindow
    x:Class="ChWindowViaXaml.ChildWindows.ChWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChWindowViaXaml.ChildWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
    xmlns:vm="clr-namespace:ChWindowViaXaml.ChildWindows"
    Title="ChWindow1"
    d:DesignHeight="310"
    d:DesignWidth="310"
    AllowMove="True"
    ChildWindowHeight="300"
    ChildWindowWidth="300"
    IsModal="False"
    IsOpen="{Binding ChWindow1OpenClose}"
    ShowCloseButton="True"
    mc:Ignorable="d">

    <simpleChildWindow:ChildWindow.DataContext>
        <vm:ChWindow1_VM />
    </simpleChildWindow:ChildWindow.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button Content="Show another ChildWindow" Click="ShowAnotherChildWindow_Click" />

        </StackPanel>
    </Grid>
</simpleChildWindow:ChildWindow>
